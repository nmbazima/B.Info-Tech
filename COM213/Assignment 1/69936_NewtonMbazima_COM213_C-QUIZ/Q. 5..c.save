 //This C program will calculate temperature from degree Celsius to Fahrenheit

#include <stdio.h>

int main()
{
    float celsius, fahrenheit;
    printf("This program calculates Degrees Celsius to Degrees Fahrenheit \n\n");
    /* Input temperature in celsius */
    printf("Enter temperature in Celsius: ");
    scanf("%f", &celsius);

    /* celsius to fahrenheit conversion formula */
    fahrenheit = (celsius * 9 / 5) + 32;

    printf("%.2f Degrees Celsius = %.2f Degrees Fahrenheit", celsius, fahrenheit);

    return 0;
}

